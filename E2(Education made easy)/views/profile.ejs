  <form class="myprofile" action="/profile" method="post">
    <div id="profile-container">
	<% items.forEach(function(image) { %>
   <image id="profileImage" src="data:image/<%=image.img.contentType%>;base64,
                     <%=image.img.data.toString("base64")%>">
        <% }) %>
    </div>
<input id="imageUpload" type="file"
       name="profile_photo" placeholder="Photo" required="" capture>
<br>
<br>

    <label for="validationDefault01" class="form-label fname">Username</label>
    <input type="text" class="form-control" placeholder="<%= username %>" id="validationDefault01" name="username" value="<%= username %>"required><br>
    <label for="inputEmail4" class="form-label email">Email</label>
    <input type="email" class="form-control" placeholder="<%= email %>" id="inputEmail4" value="<%= email %>" required readonly><br>
    <label for="validationDefault02" class="form-label institution_name">Name of the institution</label>
    <input type="text" class="form-control" placeholder="<%= institution %>" value="<%= institution %>" id="validationDefault02" name="inst" required><br>
    <label for="inputAddress" class="form-label address">Address</label>
    <input type="text" class="form-control" id="inputAddress" name="addr" placeholder="<%= address %>" value="<%= address %>"><br>
    <label for="validationDefault02" class="form-label plan">Plan</label>
    <input type="text" class="form-control" placeholder="<%= plan %>" id="validationDefault02" value="<%= plan %>" required readonly><br>

    <button type="submit" class="btn btn-outline-info" name="button" style="margin:2%" >Update Details</button>
  </form>
  <script type="text/javascript">
    $("#profileImage").click(function(e) {
      $("#imageUpload").click();
  });

  function fasterPreview( uploader ) {
      if ( uploader.files && uploader.files[0] ){
            $('#profileImage').attr('src',
               window.URL.createObjectURL(uploader.files[0]) );
      }
  }

  $("#imageUpload").change(function(){
      fasterPreview( this );
  });
  </script>

