<table class="table table-hover">
 <thead>
   <tr>
     <th>Student name</th>
     <th>Teacher name</th>
	 <th>Doubt</th>
	 <th>Link for session</th>
	 <th>Status</th>
	 <th>Submit the answer</th>
   </tr>
 </thead>
 <tbody>
    <% counselingss.forEach(function(postssecd){ %>
	<tr>
	<form action="/teacher/doubt" method="post">
	 <td><%= postssecd.studentusername %></td>
     <td><%= postssecd.teacherusername %></td>
	 <td><input class="form-control" type="text" placeholder="Doubt" name="description" value="<%=postssecd.doubt%>" readonly></td>
	 <td><input class="form-control" type="text" placeholder="Link" name="link"></td>
	 <td><input class="form-control" type="text" placeholder="Your reply" name="time"></td>
	 <td><button type="submit" class="btn btn-primary" name="studentsub" value="<%= postssecd.studentusername %>">Submit</button></td>
	 </form>
	</tr>
	<% }) %>
 </tbody>  
</table>
